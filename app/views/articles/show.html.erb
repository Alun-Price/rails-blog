<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<ul>
  <li><%= link_to "Edit Article", edit_article_path(@article)%>
  <li><%= link_to "Show All Articles", root_path %>
  <li><%= link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></li>
</ul>

<h2>Comments</h2>
<% @article.comments.each do |comment|%>
  <p>
    <strong>Commenter :</strong>
    <%= comment.commenter %>
  </p>
  <p>
    <strong>Comment :</strong>
    <%= comment.body %>
  </p>
<% end %>  

<h2>Add a comment:</h2>
<%= render 'comments/form' %>